rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if user is part of conversation
    function isParticipant(ownerId, contactId) {
      return isAuthenticated() && 
             (request.auth.uid == ownerId || request.auth.uid == contactId);
    }

    // Helper function to check if only adding a sighting
    function onlyAddingSighting() {
      let affectedKeys = request.resource.data.diff(resource.data).affectedKeys();
      // Allow if only 'sightings' or 'status' fields are being modified
      return affectedKeys.hasOnly(['sightings', 'status']) &&
             request.resource.data.sightings.size() > resource.data.sightings.size();
    }

    // Pets collection
    match /pets/{petId} {
      // Anyone can read pet listings
      allow read: if true;

      // Only authenticated users can create pets
      // Must include userId field matching their auth uid
      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid;

      // Owner can update all fields, or any authenticated user can add sightings
      allow update: if isAuthenticated() &&
                      (resource.data.userId == request.auth.uid || onlyAddingSighting());

      // Only the owner can delete their pet
      allow delete: if isAuthenticated()
                    && resource.data.userId == request.auth.uid;
    }

    // Users collection (for storing user profiles)
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated() && request.auth.uid == userId;
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }

    // Conversations collection (for chat system)
    match /conversations/{conversationId} {
      // Only participants can read the conversation
      allow read: if isAuthenticated() && 
                     (request.auth.uid == resource.data.ownerId || 
                      request.auth.uid == resource.data.contactId);
      
      // Any authenticated user can create a conversation
      allow create: if isAuthenticated() &&
                       (request.auth.uid == request.resource.data.ownerId ||
                        request.auth.uid == request.resource.data.contactId);
      
      // Only participants can update the conversation (for lastMessage, unreadCount, etc)
      allow update: if isAuthenticated() &&
                       (request.auth.uid == resource.data.ownerId || 
                        request.auth.uid == resource.data.contactId);
      
      // Only participants can delete the conversation
      allow delete: if isAuthenticated() &&
                       (request.auth.uid == resource.data.ownerId || 
                        request.auth.uid == resource.data.contactId);
    }

    // Messages collection (for chat messages)
    match /messages/{messageId} {
      // Users can read messages from their conversations
      // We need to allow reading by conversationId since we query that way
      allow read: if isAuthenticated();
      
      // Users can create messages where they are the sender
      allow create: if isAuthenticated() &&
                       request.auth.uid == request.resource.data.senderId;
      
      // Only the sender can update their own messages (for edits, if implemented)
      // Or the receiver can update to mark as read
      allow update: if isAuthenticated() &&
                       (request.auth.uid == resource.data.senderId ||
                        request.auth.uid == resource.data.receiverId);
      
      // Only the sender can delete their messages
      allow delete: if isAuthenticated() &&
                       request.auth.uid == resource.data.senderId;
    }

    // Sightings can be added by anyone, embedded in pets document
    // (handled by pet update rules above)
  }
}
