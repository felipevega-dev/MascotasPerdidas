rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if only adding a sighting
    function onlyAddingSighting() {
      let affectedKeys = request.resource.data.diff(resource.data).affectedKeys();
      // Allow if only 'sightings' or 'status' fields are being modified
      return affectedKeys.hasOnly(['sightings', 'status']) &&
             request.resource.data.sightings.size() > resource.data.sightings.size();
    }

    // Pets collection
    match /pets/{petId} {
      // Anyone can read pet listings
      allow read: if true;

      // Only authenticated users can create pets
      // Must include userId field matching their auth uid
      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid;

      // Owner can update all fields, or any authenticated user can add sightings
      allow update: if isAuthenticated() &&
                      (resource.data.userId == request.auth.uid || onlyAddingSighting());

      // Only the owner can delete their pet
      allow delete: if isAuthenticated()
                    && resource.data.userId == request.auth.uid;
    }

    // Users collection (for storing user profiles)
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated() && request.auth.uid == userId;
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }

    // Sightings can be added by anyone, embedded in pets document
    // (handled by pet update rules above)
  }
}
